<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />
	<!-- Starting XI Styles -->
	<flags id="stxi" value="tables/standard/normal"/>

	<!-- Subs Styles -->
	<flags id="subs" value="tables/custom/squad/substitute/row"/>

	  <widget class="match_player_list_table" id="pltb" database_table_type="1" mode="fill_rows, stripe_rows, fill_columns" row_height="28" column_spacing="0" use_super_headings="true">
      <boolean id="auto_size_rows" value="false" />
      <boolean id="fixed_size_rows" value="true" />
      <boolean id="dont_restore_selection" value="true" />
      <boolean id="save_session_state" value="true" />
      <boolean id="sort_disabled" value="true" />
      <boolean id="navigation_container" value="true" />
      <boolean id="default_focus" value="true" />

      <flags id="default_view" value="gnIn" />

		<list id="viws">
			     <record id="ATIn">
          <translation id="name" translation_id="230042" type="use" value="Attacking" />
          <record id="view">
                     <!--- Time -->
            <flags id="PinD" />
            <!-- Name -->
            <flags id="Pnam" />

            <!-- SHOOTING -->
            <!-- Total/On Target -->
            <record id="ssOt" width="50"/>
            <!-- Hit Woodwork -->
            <record id="HwdW" />
            <!-- Shots Saved -->
            <record id="MPsv" />

            <!-- HEADING -->
            <!-- Total/Won -->
            <record id="tCmH" width="50" />
            <!-- Key -->
            <record id="MPky" />

            <!-- PASSING -->
            <!--- Total/Completed -->
            <record id="tCmP" width="50"/>
            <!-- Key -->
            <record id="MPkp" />

            <!-- CROSSES -->
            <!-- Total/Completed -->
            <record id="tCmC" width="50" />

            <!-- MISC -->
            <!-- Dribbles -->
            <record id="DrbL" width="50"/>
            <!-- Fouled -->
            <record id="MPfd"/>

						<!--- xG -->
            <record id="MPxg"  width="24" auto_hide_priority="2" navigation_focus_target="false"/>
            <!--- Goals -->
            <record id="MPgl"  width="24" auto_hide_priority="2" navigation_focus_target="false"/>
						<!-- Assists -->
						<record id="MPas"  width="24" auto_hide_priority="2"/>
            <!-- Condition -->
            <record id="PcOI" auto_hide_priority="2"/>
						<!-- Sharpness -->
						<record id="PftI" auto_hide_priority="2"/>
            <!-- Distance Run -->
            <record id="PDru" auto_hide_priority="2"/>
            <!-- Rating -->
            <record id="MPrt" auto_hide_priority="2" navigation_focus_target="false"/>
          </record>
        </record>
		</list>

	</widget>
</panel>
