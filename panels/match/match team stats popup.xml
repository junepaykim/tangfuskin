<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />
	<!-- Starting XI Styles -->
	<flags id="stxi" value="tables/standard/normal"/>

	<!-- Subs Styles -->
	<flags id="subs" value="tables/custom/squad/substitute/row"/>

	<widget class="match_player_list_table" id="pltb" database_table_type="1" mode="fill_rows,stripe_rows,printable" row_height="23" row_spacing="2">
		<boolean id="fixed_size_rows" value="true" />
		<boolean id="dont_restore_selection" value="true" />
		<boolean id="save_session_state" value="true" />
		<boolean id="sort_disabled" value="true" />

		<flags id="default_view" value="msvw" />

		<list id="default_sort_column">
			<integer value="Pshp" />
		</list>

		<list id="viws">
			<record id="msvw">
				<record id="view">
					<record id="Pshp" disabled="true"/>
					<record id="PinD"  width="30" />
					<record id="Pcar"   width="25"/>
					<record id="Pnam"  width="100" format="[%person#1-initial_surname]"/>
					<record id="PRCF"  width="65" auto_hide_priority="300"/>
		
					<record id="MPCc" width="20" auto_hide_priority="1500" />
					<record id="MPgl"  width="20" auto_hide_priority="1500"/>
					<record id="MPst" width="20" auto_hide_priority="1550" />	
					<record id="MPas" width="20" auto_hide_priority="1600"/>
					<record id="MPkp"  width="20" auto_hide_priority="1800"/>
					<record id="MPCc"  width="20" auto_hide_priority="1650"/>
					<record id="MPmt"  width="20" auto_hide_priority="1700"/>
					<record id="MPrt"  width="35" auto_hide_priority="1300"/>
						 <!-- PASSING -->
					<!--- Total/Completed -->
					<record id="tCmP"   width="50"/>
					<!-- Key -->
					<record id="MPkp" />
					<!-- Chances created -->
	
					<record id="Pmtc"  width="80" size="8" auto_hide_priority="1400"/>
					<record id="PcOL" width="30" auto_hide_priority="1600"/>
					
				</record>
			</record>
		</list>

	</widget>
</panel>
